<resources>

	<style name="AppTheme" parent="LightAppTheme" />

	<style name="AppTheme.NavigationOverlay">
		<item name="android:navigationBarColor">?colorNavigationOverlay</item>
	</style>

	<style name="BaseLightAppTheme" parent="Theme.Material3.Light.NoActionBar">
		<item name="android:statusBarColor">?colorPrimary</item>
	</style>

	<style name="LightAppTheme" parent="BaseLightAppTheme">
		<item name="colorNavigationOverlay">@color/system_ui_overlay_dark</item>
		<item name="android:navigationBarColor">?colorPrimary</item>
	</style>

	<style name="DarkAppTheme" parent="Theme.Material3.Dark.NoActionBar">
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
		<item name="colorNavigationOverlay">@color/system_ui_overlay_dark</item>
	</style>

	<style name="DarkAppTheme.NavigationOverlay">
		<item name="android:navigationBarColor">?colorNavigationOverlay</item>
	</style>

</resources>